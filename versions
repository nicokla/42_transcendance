rbenv versions
	rbenv install -l
	rbenv install 2.6.2
	rbenv global 2.6.2
gem list rails
	gem install rails -v 5.2.3
bundle -v
gem query --local bundle
bundler env
	gem install bundler -v '~> 1.0'

bundle update && bundle _1.17.3_ install
rake db:migrate
rails server


