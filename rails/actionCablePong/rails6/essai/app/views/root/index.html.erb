<div id="main">
</div>

<script type="text/template" id="rootTemplate">
	<h1>Pong</h1>
	<button id="buttonPlayerLeft" class="btn btn-primary">Joueur de gauche</button>
	<button id="buttonPlayerRight" class="btn btn-primary">Joueur de droite</button>
	<button id="buttonToWatch" class="btn btn-primary">Regarder la partie</button>
</script>

<script type="text/template" id="pongTemplate">
	<div id="pongScore">
		<span id='playerleft'></span><span id="scoreLeft"></span>
		<br/>
		<span id='playerright'></span><span id="scoreRight"></span>
	</div>
	<div class='gamepong'>
		<svg id='svgpong' width="620" height="620">
			<rect id="background" width="100%" height="100%" fill="black"/>
			<rect id="leftPaddle" width="30" height="120" fill="white" x="10" y="250"/>
			<rect id="rightPaddle" width="30" height="120" fill="white" x="580" y="250"/>
			<rect id="ball" width="20" height="20" fill="white" x="300" y="300"/>
		</svg>
	</div>
	<div id="pongPlay">
		<input id="start" type="button" value="Start">
		<input type="button" value="Stop">
	</div>
</script>

<script type="text/template" id="watchTemplate">
	<div id="watchGames">
		<h2>Games</h2>
		<ul></ul>
	</div>
	<div class='gamepong'>
		<svg id='svgpong' width="620" height="620">
			<rect id="background" width="100%" height="100%" fill="black"/>
			<rect id="leftPaddle" width="30" height="120" fill="white" x="10" y="250"/>
			<rect id="rightPaddle" width="30" height="120" fill="white" x="580" y="250"/>
			<rect id="ball" width="20" height="20" fill="white" x="300" y="300"/>
		</svg>
	</div>
</script>


<%=
	javascript_pack_tag 'main',
	'data-turbolinks-track': 'reload',
	'data-turbolinks-suppress-warning': true
%>
